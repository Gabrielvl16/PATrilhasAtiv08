using System;

namespace b
{
	class Program
	{
		public static void Main()
		{	
			Console.WriteLine("Os números pares entre 0 e 100 são: ");
			for(int i = 0; i < 100; i++)
			{
				if(i % 2 == 0)
				{
					Console.WriteLine(i);
				}
			}
			
			Console.WriteLine("Pressione qualquer tecla para sair . . . ");
			Console.ReadKey(true);
		}
	}
}
